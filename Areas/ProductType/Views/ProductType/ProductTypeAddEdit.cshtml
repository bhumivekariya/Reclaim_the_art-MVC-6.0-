@using Reclaim_the_art.Areas.ProductType.Models
@{
    ViewData["Title"] = "ProductTypeAddEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";

}


@model ProductTypeModel
<h4>@TempData["TD"]</h4>
<form method="post" asp-area="ProductType" asp-controller="ProductType" asp-action="Save">
    @Html.HiddenFor(x=>x.ProductTypeID)
  <div class="row match-height">
      <div class="col-lg-12 col-md-12">
          <div class="card">
              <div class="card-header">
                    <h4 class="card-title">Product Type Add/Edit</h4>
              </div>
              <div class="card-block">
                  <div class="card-body">
                        <h5 class="mt-2">ProductType</h5>
                      <fieldset class="form-group">
                            <input type="text" class="form-control" id="placeholderInput" placeholder="Enter Product Type" asp-for="ProductType">
                      </fieldset>
                  </div>
              </div>
          </div>
      </div>
    </div>


<div class="row">
    <div class="col-xl-6 col-lg-6 col-md-12" style="padding-left: 37%;">
        <input type="submit" class="btn btn-dark  mr-1 mb-1" value="SAVE" />
    </div>
    <div class="col-xl-6 col-lg-6 col-md-12">
            <a asp-area="ProductType" asp-controller="ProductType" asp-action="Cancle" class="btn btn-danger  mr-1 mb-1">CANCLE</a>
    </div>
</div>
</form>

