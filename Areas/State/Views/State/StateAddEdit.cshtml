@using Reclaim_the_art.Areas.State.Models

@{
    ViewData["Title"] = "StateAddEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model StateModel
<h4>@TempData["TD"]</h4>
<form method="post" asp-area="State" asp-controller="State" asp-action="Save">
    @Html.HiddenFor(x=>x.StateID)
    <div class="row match-height">
        <div class="col-lg-12 col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">State Add/Edit</h4>
                </div>
                <div class="card-block">
                    <div class="card-body">
                        <h5 class="mt-2">State Name</h5>
                        <fieldset class="form-group">
                            <input type="text" class="form-control" id="placeholderInput" placeholder="Enter State Name" asp-for="StateName">
                        </fieldset>
                        <h5 class="mt-2">Select Country</h5>
                        <fieldset class="form-group">
                            <select class="form-control" asp-for="CountryID" asp-items="@(new SelectList(ViewBag.CountryList,"CountryID","CountryName"))">
                                <option>select country</option>
                            </select>
                        </fieldset>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-xl-6 col-lg-6 col-md-12" style="padding-left: 37%;">
            <input type="submit" class="btn btn-dark  mr-1 mb-1" value="SAVE" />
        </div>
        <div class="col-xl-6 col-lg-6 col-md-12">
            <a asp-area="State" asp-controller="State" asp-action="Cancle" class="btn btn-danger  mr-1 mb-1">CANCLE</a>
        </div>
    </div>
</form>