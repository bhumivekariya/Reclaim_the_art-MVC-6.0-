@using Reclaim_the_art.Areas.Admin.Models
@{
    ViewData["Title"] = "AdminAddEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
@model AdminModel
<h4>@TempData["TD"]</h4>
<form method="post" asp-area="Admin" asp-controller="Admin" asp-action="Save">
    @Html.HiddenFor(x=>x.AdminID)
  <div class="row match-height">
      <div class="col-lg-12 col-md-12">
          <div class="card">
              <div class="card-header">
                  <h4 class="card-title">Admin Form</h4>
              </div>
              <div class="card-block">
                  <div class="card-body">
                        <h5 class="mt-2">Name</h5>
                      <fieldset class="form-group">
                            <input type="text" class="form-control" id="placeholderInput" placeholder="Enter Admin Name" asp-for="AdminName">
                            <span asp-validation-for="AdminName" class="text-danger"></span>
                      </fieldset>

                        <h5 class="mt-2">User Name</h5>
                      <fieldset class="form-group">
                            <input type="text" class="form-control" id="placeholderInput" placeholder="Enter User Name" asp-for="AdminUserName">
                            <span asp-validation-for="AdminUserName" class="text-danger"></span>
                      </fieldset>
                        <h5 class="mt-2">Password</h5>
                      <fieldset class="form-group">
                            <input type="password" class="form-control" id="placeholderInput" placeholder="Enter password" asp-for="AdminPassWord">
                            <span asp-validation-for="AdminPassWord" class="text-danger"></span>
                      </fieldset>
                  </div>
              </div>
          </div>
      </div>
    </div>


<div class="row">
    <div class="col-xl-6 col-lg-6 col-md-12" >
        <input type="submit" class="btn btn-dark  mr-1 mb-1" value="SAVE" />
            <a asp-area="Admin" asp-controller="Admin" asp-action="Cancle" class="btn btn-danger  mr-1 mb-1">CANCEL</a>
    </div>
</div>
</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}