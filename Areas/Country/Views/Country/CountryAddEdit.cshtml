@using Reclaim_the_art.Areas.Country.Models
@{
    ViewData["Title"] = "CountryAddEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
@model CountryModel
<h4>@TempData["TD"]</h4>

<form method="post" asp-area="Country" asp-controller="Country" asp-action="Save">
    @Html.HiddenFor(x=>x.CountryID)
    <div class="row match-height">
        <div class="col-lg-12 col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Country Form</h4>
                </div>
                <div class="card-block">
                    <div class="card-body">
                        <h5 class="mt-2">Name</h5>
                        <fieldset class="form-group">
                            <input type="text" class="form-control" id="placeholderInput" placeholder="Enter Name" asp-for="CountryName">
                            <span asp-validation-for="CountryName" class="text-danger"></span>
                        </fieldset>

                        <h5 class="mt-2">Country Code</h5>
                        <fieldset class="form-group">
                            <input type="text" class="form-control" id="placeholderInput" placeholder="Enter Country Code" asp-for="CountryCode">
                            <span asp-validation-for="CountryCode" class="text-danger"></span>
                        </fieldset>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-xl-6 col-lg-6 col-md-12" >
            <input type="submit" class="btn btn-dark  mr-1 mb-1" value="SAVE" />
            <a asp-area="Country" asp-controller="Country" asp-action="Cancel" class="btn btn-danger  mr-1 mb-1">CANCEL</a>
        </div>
       
    </div>
</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}