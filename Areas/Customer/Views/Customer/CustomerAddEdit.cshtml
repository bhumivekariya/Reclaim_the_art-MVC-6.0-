@using Reclaim_the_art.Areas.Customer.Models
@{
    ViewData["Title"] = "CustomerAddEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@model CustomerModel
<h4>@TempData["TD"]</h4>
<form method="post" asp-area="Customer" asp-controller="Customer" asp-action="Save">
    @Html.HiddenFor(x=>x.CustomerID)
  <div class="row match-height">
      <div class="col-lg-12 col-md-12">
          <div class="card">
              <div class="card-header">
                    <h4 class="card-title">Customer Form</h4>
              </div>
              <div class="card-block">
                  <div class="card-body">
                        <h5 class="mt-2">Name</h5>
                      <fieldset class="form-group">
                            <input type="text" class="form-control" id="placeholderInput" placeholder="Enter Name" asp-for="CustomerName">
                      </fieldset>

                        <h5 class="mt-2">Password</h5>
                      <fieldset class="form-group">
                            <input type="password" class="form-control" id="placeholderInput" placeholder="Enter Password" asp-for="CustomerPassword">
                      </fieldset>
                  </div>
              </div>
          </div>
      </div>
    </div>


<div class="row">
    <div class="col-xl-6 col-lg-6 col-md-12">
        <input type="submit" class="btn btn-dark  mr-1 mb-1" value="SAVE" />
            <a asp-area="Customer" asp-controller="Customer" asp-action="Cancle" class="btn btn-danger  mr-1 mb-1">CANCLE</a>
    </div>
</div>
</form>

