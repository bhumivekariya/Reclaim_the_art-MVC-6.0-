@using Reclaim_the_art.Areas.Product.Models
@{
    ViewData["Title"] = "ProductAddEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@model ProductModel
<h4>@TempData["TD"]</h4>

<form method="post" asp-area="Product" asp-controller="Product" asp-action="Save" enctype="multipart/form-data">
    @Html.HiddenFor(x=>x.ProductID)
    @Html.HiddenFor(x=>x.ProductPicture)
    <div class="row match-height">
        <div class="col-lg-12 col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Product Add/Edit</h4>
                </div>
                <div class="card-block">
                    <div class="card-body">
                        <h5 class="mt-2">Product Name</h5>
                        <fieldset class="form-group"> 
                            <input type="text" class="form-control" id="placeholderInput" placeholder="Enter Product Name" asp-for="ProductName">
                        </fieldset>
                        <h5 class="mt-2">Product Picture</h5>
                        <fieldset class="form-group">
                            <input type="file" class="form-control" id="placeholderInput" placeholder="Enter Product Picture" asp-for="File">
                        </fieldset>
                        <h5 class="mt-2">ProductDiscription</h5>
                        <fieldset class="form-group">
                            <input type="text" class="form-control" id="placeholderInput" placeholder="Enter Product Discription" asp-for="ProductDiscription">
                        </fieldset>
                        <h5 class="mt-2">ProductPrice</h5>
                        <fieldset class="form-group">
                            <input type="text" class="form-control" id="placeholderInput" placeholder="Enter Product Price" asp-for="ProductPrice">
                        </fieldset>
                        <h5 class="mt-2">ProductDiscount</h5>
                        <fieldset class="form-group">
                            <input type="text" class="form-control" id="placeholderInput" placeholder="Enter Product Discount" asp-for="ProductDiscount">
                        </fieldset>
                        <h5 class="mt-2">ProductTypeID</h5>
                        <fieldset class="form-group">
                            <input type="text" class="form-control" id="placeholderInput" placeholder="Enter ProductTypeID" asp-for="ProductTypeID">
                        </fieldset>
                        <h5 class="mt-2">CustomerID</h5>
                        <fieldset class="form-group">
                            <input type="text" class="form-control" id="placeholderInput" placeholder="Enter CustomerID" asp-for="CustomerID">
                        </fieldset>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-xl-6 col-lg-6 col-md-12" style="padding-left: 37%;">
            <input type="submit" class="btn btn-dark  mr-1 mb-1" value="SAVE" />
        </div>
        <div class="col-xl-6 col-lg-6 col-md-12">
            <a asp-area="Product" asp-controller="Product" asp-action="Cancle" class="btn btn-danger  mr-1 mb-1">CANCLE</a>
        </div>
    </div>
</form>

