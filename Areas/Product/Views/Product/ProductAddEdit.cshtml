@using Reclaim_the_art.Areas.Product.Models
@{
    ViewData["Title"] = "ProductAddEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@model ProductModel
<h4>@TempData["TD"]</h4>

<form method="post" asp-area="Product" asp-controller="Product" asp-action="Save" enctype="multipart/form-data">
    @Html.HiddenFor(x=>x.ProductID)
    @Html.HiddenFor(x=>x.ProductPicture)
    <div class="row match-height">
        <div class="col-lg-12 col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Product Form</h4>
                </div>
                <div class="card-block">
                    <div class="card-body">
                        <h5 class="mt-2">Name</h5>
                        <fieldset class="form-group"> 
                            <input type="text" class="form-control" id="placeholderInput" placeholder="Enter Name" asp-for="ProductName">
                        </fieldset>
                        <h5 class="mt-2">Picture</h5>
                        <fieldset class="form-group">
                            <input type="file" class="form-control" id="placeholderInput" asp-for="File">
                        </fieldset>
                        <h5 class="mt-2">Discription</h5>
                        <fieldset class="form-group">
                            <input type="text" class="form-control" id="placeholderInput" placeholder="Enter Discription" asp-for="ProductDiscription">
                        </fieldset>
                        <h5 class="mt-2">Price</h5>
                        <fieldset class="form-group">
                            <input type="text" class="form-control" id="placeholderInput" placeholder="Enter Price" asp-for="ProductPrice">
                        </fieldset>
                        <h5 class="mt-2">Discount</h5>
                        <fieldset class="form-group">
                            <input type="text" class="form-control" id="placeholderInput" placeholder="Enter Discount" asp-for="ProductDiscount">
                        </fieldset>
                        <h5 class="mt-2">Product Type</h5>
                        <fieldset class="form-group">
                            <select class="form-control" asp-for="ProductTypeID" asp-items="@(new SelectList(ViewBag.ProductTypelist,"ProductTypeID","ProductType"))">
                                <option>select Product Type</option>
                            </select>
                        </fieldset>
                        <h5 class="mt-2">Customer Name</h5>
                        <fieldset class="form-group">
                            <select class="form-control" asp-for="CustomerID" asp-items="@(new SelectList(ViewBag.CustomerList,"CustomerID","CustomerName"))">
                                <option>select Customer Name</option>
                            </select>
                        </fieldset>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-xl-6 col-lg-6 col-md-12">
            <input type="submit" class="btn btn-dark  mr-1 mb-1" value="SAVE" />
            <a asp-area="Product" asp-controller="Product" asp-action="Cancle" class="btn btn-danger  mr-1 mb-1">CANCEL</a>

        </div>
    </div>
</form>

