
@{
    ViewData["Title"] = "CityList";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
@using System.Data
@model DataTable
<div>
	<a class="btn btn-secondary btn-min-width mr-1 mb-1" asp-area="City" asp-controller="City" asp-action="Add">Add City</a>
</div>

<br />

<div>
	<div class="card">
		<div class="card-header">
			<h4 class="card-title">City List</h4>
			<a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
			<div class="heading-elements">
				<ul class="list-inline mb-0">
					<li><a data-action="collapse"><i class="ft-minus"></i></a></li>
					<li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
					<li><a data-action="expand"><i class="ft-maximize"></i></a></li>
					<li><a data-action="close"><i class="ft-x"></i></a></li>
				</ul>
			</div>
		</div>
		<div class="card-content collapse show">
			<div class="table-responsive">
				<table class="table table-striped">
					<thead>
						<tr>
							<th scope="col">CountryName</th>
							<th scope="col">StateName</th>
							<th scope="col">CityName</th>
							<th scope="col">PinCode</th>
							<th scope="col">CreationTime</th>
							<th scope="col">ModificationTime</th>
							<th scope="col">Action</th>
							<th scope="col">Action</th>
						</tr>
					</thead>
					<tbody>
						@foreach (DataRow dr in Model.Rows)
						{
							<tr>
								<td>
									@dr["CountryName"]
								</td>
								<td>
									@dr["StateName"]
								</td>
								<td>
									@dr["CityName"]
								</td>
								<td>
									@dr["Pincode"]
								</td>
								<td>
									@Convert.ToDateTime(dr["CreationDate"]).ToString("dd-MM-yy")
								</td>
								<td>
									@Convert.ToDateTime(dr["ModificationDate"]).ToString("dd-MM-yy")
								</td>
								<td>
									<form method="post" asp-area="City" asp-controller="City" asp-action="Delete">
										<input type="hidden" name="CityID" value="@Convert.ToInt32(dr["CityID"]).ToString()">
										<button type="submit" class="btn btn-danger  mr-1 mb-1" onclick="fun1(event)">Delete</button>
									</form>
								</td>
								<td>
									<a type="submit" class="btn btn-dark  mr-1 mb-1" asp-area="City" asp-controller="City" asp-action="Add" asp-route-CityID="@Convert.ToInt32(dr["CityID"]).ToString()">Edit</a>
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>


@section Scripts{

	<script>
		function fun1() {
			if (confirm("Are you sure want to delete?")) {
				return true;
			}
			else {
				event.preventDefault();
				return false;
			}
		}
	</script>
}