@using Reclaim_the_art.Areas.BillWiseProduct.Models
@{
    ViewData["Title"] = "BillWiseProductAddEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
@model BillWiseProductModel
<h4>@TempData["TD"]</h4>
<form method="post" asp-area="BillWiseProduct" asp-controller="BillWiseProduct" asp-action="Save">
    @Html.HiddenFor(x=>x.BillWiseProductID)
    <div class="row match-height">
        <div class="col-lg-12 col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Bill Wise Product Form</h4>
                </div>
                <div class="card-block">
                    <div class="card-body">
                        <h5 class="mt-2">Quantity</h5>
                        <fieldset class="form-group">
                            <input type="text" class="form-control" id="placeholderInput" placeholder="Enter Quantity" asp-for="Quantity">
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </fieldset>

                        <h5 class="mt-2">Bill Status</h5>
                        <fieldset class="form-group">
                            <input type="text" class="form-control" id="placeholderInput" placeholder="Paid / Remain" asp-for="BillID">
                        </fieldset>
                        <h5 class="mt-2">Product Name</h5>
                        <fieldset class="form-group">
                            <select class="form-control" asp-for="ProductID" asp-items="@(new SelectList(ViewBag.productlist,"ProductID","ProductName"))">
                                <option>select Product Name</option>
                            </select>
                        </fieldset>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-xl-6 col-lg-6 col-md-12">
            <input type="submit" class="btn btn-dark  mr-1 mb-1" value="SAVE" />
            <a asp-area="BillWiseProduct" asp-controller="BillWiseProduct" asp-action="Cancle" class="btn btn-danger  mr-1 mb-1">CANCEL</a>
        </div>
      
    </div>
</form>


@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

