
@{
	ViewData["Title"] = "BillWiseProductList";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Data
@model DataTable
<div>
	<a class="btn btn-secondary btn-min-width mr-1 mb-1" asp-area="BillWiseProduct" asp-controller="BillWiseProduct" asp-action="Add">Add Bill Wise Product</a>
</div>
<br />
<div>
	<div class="card">
		<div class="card-header">
			<h4 class="card-title">Bill Wise Product List</h4>
			<a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
			<div class="heading-elements">
				<ul class="list-inline mb-0">
					<li><a data-action="collapse"><i class="ft-minus"></i></a></li>
					<li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
					<li><a data-action="expand"><i class="ft-maximize"></i></a></li>
				</ul>
			</div>
		</div>
		<div class="card-content collapse show">
			<div class="table-responsive">
				<table class="table table-striped">
					<thead>
						<tr>
							<th scope="col">Quantity</th>
							<th scope="col">Product Name</th>
							<th scope="col">Bill Status</th>
							<th scope="col">Creation Date</th>
							<th scope="col">Modification Date</th>
							
						</tr>
					</thead>
					<tbody>
						@foreach (DataRow dr in Model.Rows)
						{
							<tr>
								<td>@dr["Quantity"]</td>
								<td>@dr["ProductName"]</td>
								<td>@dr["BillStatus"]</td>
								<td>@Convert.ToDateTime(dr["CreationDate"]).ToString("dd-MM-yyyy")</td>
								<td>@Convert.ToDateTime(dr["ModificationDate"]).ToString("dd-MM-yyyy")</td>
								
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

@section Scripts{

	<script>
		function fun1() {
			if (confirm("Are you sure want to delete?")) {
				return true;
			}
			else {
				return false;
			}
		}
	</script>
}
